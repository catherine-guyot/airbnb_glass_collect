<div class="container">

<h1>Mettez votre appartement sur Airbnb-Glass-Collect !</h1>

<%= simple_form_for @flat do |f| %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :description %>
  <%= f.input :number_of_guests %>
  <%= f.input :price_per_night %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class:"btn btn-primary" %>
  <% end %>
</div>
